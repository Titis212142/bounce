{
  "name": "dopamine-orbs-studio",
  "version": "1.0.0",
  "private": true,
  "description": "TikTok video generation and publishing tool",
  "scripts": {
    "dev": "pnpm --filter studio dev & pnpm --filter api dev",
    "dev:studio": "pnpm --filter studio dev",
    "dev:api": "pnpm --filter api dev",
    "worker": "pnpm --filter api worker",
    "generate:batch": "pnpm --filter engine generate:batch",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:studio": "pnpm --filter api db:studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
